{

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    },
  },

  "rules": {
    "camelcase": 0,
    "curly": 2,
    "eqeqeq": 2,
    "indent": 2,
    "no-bitwise": 2,
    "no-invalid-this": 2,
    "no-irregular-whitespace": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "quotes": [2, "single"],
    "strict": [2, "global"],
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
  },

  "env": {
    "browser": true,
    "es6": true,
  },

  "plugins": [
    "react",
  ],

  "root": true,

}
