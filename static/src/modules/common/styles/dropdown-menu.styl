/**
 * Dropdown widget
 */

ul.dropdown-menu
  cursor pointer


/**
 * Dropdown Submenu
 */

.dropdown-submenu
  > .dropdown-menu
    top auto
    left 100%
    margin-top -2em

  > a:after
    display block
    content " "
    float right
    border-color transparent
    border-style solid
    border-width 5px 0 5px 5px
    border-left-color color-gray
    margin-top 5px
    margin-right -10px

  &:hover
    > .dropdown-menu
      display block

    & > a:after
      border-left-color color-gray

.popup > ul.dropdown-menu,
.dropdown-submenu.dropup .dropdown-menu
  top auto
  bottom 0
  left 100%

.long > ul.dropdown-menu
  height 214px
  overflow-y auto
