@import colors
@import layouts

.scrollable-table-container
  width calc(100% + 17px)
  min-height 8em
  max-height calc(100% - 450px)  /* can calc this more precisely */
  overflow-y scroll
  background linear-gradient(color-primary 30%, hsla(0,0%,100%,0)),
             linear-gradient(hsla(0,0%,100%,0), color-primary 70%) bottom,
             radial-gradient(at top, rgba(0,0,0,.2), transparent 70%),
             radial-gradient(at bottom, rgba(0,0,0,.2), transparent 70%) bottom
  background-repeat no-repeat
  background-size 100% 40px, 100% 40px, 100% 14px, 100% 14px
  background-attachment local, local, scroll, scroll

table.caseSelector
  color color-white
  text-align left
  margin-bottom 0
  table-layout fixed

  th
    cursor pointer

  tr
    border none
    border-top 1px solid color-white

  th:first-of-type
  th:nth-of-type(2)
  th:nth-of-type(3)
  td:first-of-type
  td:nth-of-type(2)
  td:nth-of-type(3)
    width 23%

  th:nth-of-type(4)
  td:nth-of-type(4)
    width 15%

  th:last-of-type
  td:last-of-type
    width 16%

  td:focus,
  tbody tr:hover td:not(:last-of-type)
    outline none
    background-color color-primary-alt-light
    color color-base

  tbody tr
    cursor pointer

    &.restage
      color black
      background-color color-gold

      td:not(:last-of-type):focus
        background-color color-gold-lighter

    &.restage:hover td:not(:last-of-type)
      background-color color-gold-lighter

  tr:focus,
  tr:focus td
    outline none

  tr:focus td
    border none

  > caption + thead > tr:first-child > th
    border none
    font-weight 100
    font-size 0.75em
    letter-spacing 0.05em

  td.deleteTab:focus
    background-color color-secondary-light
    color color-white

  .case-status
  .deleteTab
    i
      margin-right: .5em
    &.locked i            // This is to account for difference in icon widths
      margin-right: .85em // between the locked and unlocked icons.

.restore-case
  padding 1em
  color color-white
  text-align left
  background-color color-primary-darkest
  border-radius border-radius

  .file-dialog-link
    max-width 200px

.delete-all-cases-modal
  h1
    margin-bottom .5em
  h3
    margin-bottom 1em

.incompatibility-modal
  text-align left

  h3
    margin-bottom .5em

  p
    margin-bottom 0
