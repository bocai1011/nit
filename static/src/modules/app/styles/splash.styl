@import colors
@import layouts

/**
 * -- SPLASH STYLES --
 * This is the blue top section that appears on the page.
 */
.splash-container,
.splash-container-absolute
  background-color color-primary

.splash-container
  height 'calc(100% - %s)' % footer-height

.splash-container-absolute
  height 'calc(100% - %s - %s)' % (footer-height navbar-height)
  position absolute
  top navbar-height
  left 0
  right 0
  bottom footer-height
  overflow-y auto

.splash
  color white

  h1
    margin 0
    font-size 4.5em

  h2
    margin 1em 0 2em 0
    letter-spacing 0.05em
    opacity 0.8

  input[type="text"]
    width 27.5em
    color color-base

.splash-top
  position relative
  padding-top 2em
  width 80%
  height 100%
  margin-left auto
  margin-right auto
  text-align center

.splash-head
  color color-white
  border 3px solid color-white
  border-radius border-radius
  padding 1em

  h2
    font-size 2em

  +table
    margin-top 2em
